        </binding>
        <binding name="WebMapServ" closeTimeout="00:10:00" openTimeout="00:10:00"
          sendTimeout="00:10:00" maxBufferSize="5000000" maxBufferPoolSize="5000000"
          maxReceivedMessageSize="5000000">
          <readerQuotas maxDepth="5000000" maxStringContentLength="5000000"
            maxArrayLength="5000000" maxBytesPerRead="5000000" maxNameTableCharCount="5000000" />
        </binding>
      </webHttpBinding>
    </bindings>
    <behaviors>
		
