          <readerQuotas maxDepth="5000000" maxStringContentLength="5000000"
            maxArrayLength="5000000" maxBytesPerRead="5000000" maxNameTableCharCount="5000000" />
          <security mode="Message">
            <message clientCredentialType="Windows" />
          </security>
        </binding>
        <binding name="WcfUserServ" closeTimeout="00:10:00" openTimeout="00:10:00"
          sendTimeout="00:10:00" hostNameComparisonMode="StrongWildcard"
          maxBufferPoolSize="5000000" maxReceivedMessageSize="5000000"
          messageEncoding="Mtom">
          <readerQuotas maxDepth="5000000" maxStringContentLength="5000000"
